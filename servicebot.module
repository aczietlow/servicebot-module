/**
 * Returns a list of all configurable servicebot api options.
 *
 * @return array
 *   An array of the servicebot option names.
 */
function _servicebot_get_options_names() {
  return [
    'hideCancelDropdown',
    'disableCoupon',
    'hideChangePlan',
    'hideUpdateCard',
    'forceCard',
    'cancel_now',
    'messageOnCancel',
    'metadata',
    'object',
    'card.hideName',
    'card.hideAddress',
    'card.hideCountryPostal'
  ];
}
