// Stripe event types as defined in documentation, https://stripe.com/docs/api/events/types
define('SERVICEBOT_STRIPE_EVENT_CUSTOMER_SUBSCRIPTION_CREATED', 'customer.subscription.created');
define('SERVICEBOT_STRIPE_EVENT_CUSTOMER_SUBSCRIPTION_DELETED', 'customer.subscription.deleted');
define('SERVICEBOT_STRIPE_EVENT_CUSTOMER_SUBSCRIPTION_UPDATED', 'customer.subscription.updated');
define('SERVICEBOT_STRIPE_EVENT_CUSTOMER_SOURCE_CREATED', 'customer.source.created');
define('SERVICEBOT_STRIPE_EVENT_CUSTOMER_SOURCE_EXPIRING', 'customer.source.expiring');
define('SERVICEBOT_STRIPE_EVENT_CUSTOMER_SOURCE_UPDATED', 'customer.source.updated');
define('SERVICEBOT_STRIPE_EVENT_CUSTOMER_SUBSCRIPTION_TRIAL_WILL_END', 'customer.subscription.trial_will_end');
define('SERVICEBOT_STRIPE_EVENT_INVOICE_PAYMENT_FAILED', 'invoice.payment_failed');

/**
 * Implements hook_menu().
 */
function servicebot_menu() {
  $items = [];

  $items['admin/config/services/servicebot'] = [
    'title' => 'Servicebot Settings',
    'description' => 'Configure your Servicebot Settings',
    'page callback' => 'drupal_get_form',
    'page arguments' => ['servicebot_settings_form'],
    'access callback' => 'user_access',
    'access arguments' => ['servicebot_administer'],
    'file' => 'servicebot.admin.inc',
  ];

  // Only display the default billing page if the user configuration allows.
  if (variable_get('servicebot_default_billing_page', TRUE)) {
    $items['billing'] = [
      'title' => 'Billing',
      'access callback' => 'user_access',
      'access arguments' => ['servicebot_billing'],
      'page callback' => 'servicebot_billing',
      'type' => MENU_CALLBACK,
    ];
  }

  $items[variable_get('servicebot_webhook_uri', 'servicebot/webhooks')] = [
    'title' => 'Servicebot webhook',
    'access callback' => TRUE,
    'page callback' => 'servicebot_webhooks',
    'delivery callback' => 'drupal_json_output',
    'type' => MENU_CALLBACK,
  ];

  return $items;
}

